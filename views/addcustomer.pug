doctype html
html
    head
        title Add customer
        link(
            rel="stylesheet"
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
        )
    body
        div.container.border.border-warning.border-3.bg-light.p-5.my-5
            h1 New Customer
            form(action='/addcustomer', method='POST')
                div.row.mb-3
                    label(for="inputFirstname").col-sm-1.col-form-label Firstname
                    div.col-sm-4
                        input(type="text", name="firstname", placeholder="Firstname", id="inputFirstname").form-control
                div.row.mb-3
                    label(for="inputLastname").col-sm-1.col-form-label Lastname
                    div.col-sm-4
                        input(type="text", name="lastname", placeholder="Lastname", id="inputLastname").form-control
                div.row.mb-3
                    label(for="inputEmail").col-sm-1.col-form-label Email
                    div.col-sm-4
                        input(type="email", name="email", placeholder="email", id="inputEmail").form-control
                div.row.mb-3
                    label(for="inputPhone").col-sm-1.col-form-label Phonenumber
                    div.col-sm-4
                        input(type="text", name="phone", placeholder="Phonenumber", id="inputPhone").form-control
                div.row.mb-3
                    div.col-sm-1
                        input(type="submit", value="Add").form-control.bg-warning