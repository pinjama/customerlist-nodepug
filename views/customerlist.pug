doctype html
html
    head
        title Customers
        link(
            rel="stylesheet"
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
        )
    body
        
        div
            a(href='/addcustomer').btn.btn-primary.bg-warning.border-warning Add customer
        div
            table.table.table-striped
                tbody
                    each customer in customers
                        tr
                            td #{customer.firstname}
                            td #{customer.lastname}
                            td #{customer.email}
                            td #{customer.phone}